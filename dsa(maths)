Basic maths:
1)count digits of a number

#include <iostream>
using namespace std;

int main()
{   
    int n,count=0;
    cout<<"Enter the number: ";
    cin>>n;
    if(n=0){
        count=1;
    }
    else{
        while(n>0){
            count=count+1;
            n=n/10;
        }
    }
    cout<<count;
}

2)reverse a number

#include <iostream>
using namespace std;

int main()
{   
    int n,reverse=0,a;
    cout<<"Enter the number: ";
    cin>>n;
    if(n==0){
        reverse=0;
    }
    else{
        while(n>0){
            a=n%10;
            reverse=(reverse*10)+a;
            n=n/10;
        }
    }
    cout<<reverse;
}

3)Check palindrome

#include <iostream>
using namespace std;

int main()
{   
    int n,reverse=0,a,b;
    cout<<"Enter the number: ";
    cin>>n;
    b=n;
    if(n==0){
        reverse=0;
    }
    else{
        while(n>0){
            a=n%10;
            reverse=(reverse*10)+a;
            n=n/10;
        }
    }
    cout<<reverse;
    if(b==reverse){
        cout<<"\nGiven number is a palindrome";
    }
    else{
        cout<<"\nNot a palindrome";
    }
}
4)HCF 


#include <iostream>
using namespace std;

int hcf(int a,int b)
{   
   while(a>0&&b>0){
    if(a>b){
         a=a%b;
    }
    else{
        b=b%a;
    }
   }
    if(a==0){
        return b;
    }
    return a;
}

int main(){
    int a=50,b=2;
    int result=hcf(a,b);
    cout<<"HCF of "<<a<<" and "<<b<<" is: "<<result; 
}

