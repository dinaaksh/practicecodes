1)reverse an array

#include <iostream>
using namespace std; 

void reverse(int arr[],int n){
    int i=0,j=n-1;
    while(i<j){
        swap(arr[i],arr[j]);
        i++;
        j--;
    }
}
int main()
{
    int arr[]={1,2,3};
    int n=sizeof(arr)/sizeof(arr[0]);
    cout<<"array before reversal: ";
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    reverse(arr,n);
    cout<<"\nreverse of array is: ";
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}
